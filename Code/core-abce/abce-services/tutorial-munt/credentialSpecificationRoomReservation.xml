<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

	<!--
		This is a sample ABC4Trust credential specification for a simple VIP soccer ticket.
	-->

<abc:CredentialSpecification xmlns:abc="http://abc4trust.eu/wp2/abcschemav1.0"
                             Version="1.0"
                             KeyBinding="true"
                             Revocable="true"
                             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                             xsi:schemaLocation="http://abc4trust.eu/wp2/abcschemav1.0 ../../../../../../../../abc4trust-xml/src/main/resources/xsd/schema.xsd">
    <abc:SpecificationUID>http://mroman.ch/RoomReservation/credSpec</abc:SpecificationUID>
    <abc:FriendlyCredentialName lang="en">Room reservation</abc:FriendlyCredentialName>
    <abc:AttributeDescriptions MaxLength="256">
        <abc:AttributeDescription Type="RoomNumber" DataType="xs:integer" Encoding="urn:abc4trust:1.0:encoding:integer:unsigned">
            <abc:FriendlyAttributeName lang="en">RoomNumber</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
    </abc:AttributeDescriptions>
</abc:CredentialSpecification>
